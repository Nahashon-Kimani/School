<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nahashon.second">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".activity.Subject"
            android:label="Subjects" />
        <activity
            android:name=".activity.Topic"
            android:label="Topic" />
        <activity
            android:name=".activity.NoteViewer"
            android:label="Notes" />
        <activity
            android:name=".activity.AskTeacher"
            android:label="Ask A Teacher" />
        <activity
            android:name=".activity.AnswerActivity"
            android:label="Answers" />
        <activity
            android:name=".activity.WordSearch"
            android:label="Search" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegesterActivity"></activity>
    </application>

</manifest>