<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nahashon.second">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Subject"
            android:label="Subjects"
            />
        <activity android:name=".activity.Topic"
            android:label="Topic"
            />
        <activity android:name=".activity.NoteViewer"
            android:label="Notes"
            />
        <activity android:name=".activity.AskTeacher"
            android:label="Ask A Teacher"
            />
        <activity android:name=".activity.AnswerActivity"
            android:label="Answers"
            />
        <activity android:name=".activity.WordSearch"
           android:label="Search"
            />
    </application>

</manifest>